<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:layout_marginBottom="56dp"
    tools:context=".Fragments.FragmentPayment">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_check_circle_black_24dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|center_vertical"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textColor="@color/list_item_color"
            android:text="@string/odeme_yontemi"/>
        <ListView
            android:id="@+id/payment_liste"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:background="@color/basket_background"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            />
        <Button
            android:id="@+id/btn_payment_buy"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="50dp"
            android:background="@color/colorGreen"
            android:text="@string/payment_buy"
            android:textColor="@color/colorWhite" />

</FrameLayout>