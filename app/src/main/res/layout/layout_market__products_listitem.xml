<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:id="@+id/layout_market_relative"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/imageborder"
                android:id="@+id/img_list_item_image"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/img_list_item_image"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:id="@+id/linear_market_list_item_name"
                android:orientation="vertical">
                <TextView
                    android:layout_height="30dp"
                    android:text="Lays Cips"
                    android:id="@+id/txt_list_item_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="30dp"
                    android:text="Lays Cips"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_market_list_item_descp"
                    android:textColor="@color/list_item_color"
                    android:textSize="10dp"
                    android:layout_width="match_parent" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearlayout_market_butonpanel"
                android:gravity="center|left"
                android:layout_toRightOf="@id/linear_market_list_item_name">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:id="@+id/txt_list_item_price"
                    android:gravity="center_vertical"
                    android:text="5,90₺"
                    android:textColor="@color/list_item_color"
                    android:textSize="11dp"/>

                <TextView
                    android:id="@+id/txt_market_quantity"
                    android:layout_width="24dp"
                    android:gravity="center"
                    android:layout_height="24dp"
                    android:textColor="@color/colorOrange"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/white_circle_drawable"
                    android:text="4" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:text="4.85 ₺"
                    android:id="@+id/txt_market_listitem_totalprice"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>